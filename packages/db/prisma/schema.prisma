// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    id       String @id @default(cuid()) 
    Recipes  Recipe[]
}

model Recipe {
    id           String @id @default(cuid())
    name         String
    instructions String
    authorId     String
    ingredients  RecipeIngredient[]
    users        User[]
}

model Unit {
    id     String @id @default(cuid())
    name   String
}

model Ingredient {
    id     String @id @default(cuid())
    name   String
}

model RecipeIngredient {
    id         String @id @default(cuid())
    amount     Float
    ingredientId String
    unitId     String
    recipe     Recipe @relation(fields: [recipeId], references: [id])
    recipeId   String

    @@index([recipeId])
}
